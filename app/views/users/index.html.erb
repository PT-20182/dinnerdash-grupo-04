<head>
    <%= stylesheet_link_tag "pagination" %>
</head>

<%= render  "layouts/banner" %>

<div class="container mt-4 mb-5 text-secondary d-flex flex-column">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th colspan="3">Cadastrado em</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                    <td><%= link_to 'Edit', edit_user_path(user), method: 'get', class: "text-warning"%></td>
                    <td><%= link_to 'Remove', user_path(user), method: 'delete', data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="paginacao align-self-end">
        <%= link_to "&laquo;".html_safe,
            if @page > 0 then users_path(page: @page-1, anchor: "start") end %>

        <% for i in 0..MealCategory.count/8.ceil %>
            <%=  link_to i+1, users_path(page: i, anchor: "start"), class: "active" if current_class?(users_path(page: @page))  %>
        <% end %>

        <%= link_to "&raquo;".html_safe,
            if @page < MealCategory.count/8.ceil then
                users_path(page: @page+1, anchor: "start")
            else
                users_path(page: @page, anchor: "start") end %>

    </div>
</div>

<%= render  "layouts/footer" %>