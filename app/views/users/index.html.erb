<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<table>
<ul>
    <% @users.each do |user| %>
        <tr>
        <td><%= link_to user.name, user_path(user)  %></td>
        <td><%= button_to 'Editar', edit_user_path(user), method: 'get' %> </td>
        <td><%= button_to 'Remover', user_path(user), method: 'delete', data: { confirm: 'Você está certo disso?'} %></td>
    <% end %>
</ul>
</table>

<%= link_to "Cadastrar novo usuário", new_user_path %>