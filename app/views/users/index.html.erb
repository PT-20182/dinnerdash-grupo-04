
<%= render  "layouts/banner" %>

<div class="container mt-4 mb-5 text-secondary">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th colspan="3">Cadastrado em</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                    <td><%= link_to 'Edit', edit_user_path(user), method: 'get', class: "text-warning"%></td>
                    <td><%= link_to 'Remove', user_path(user), method: 'delete', data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= render  "layouts/footer" %>