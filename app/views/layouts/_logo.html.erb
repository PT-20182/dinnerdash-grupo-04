<head>
    <style type="text/css">
        .h1_logo {
            font-size: 1.8em;
        }
        .logoD a, .logoD a:hover {
            color: inherit;
            text-decoration: none;

            padding: 1em;
        }
    </style>
</head>

<!--=============================================END_STYLES=============================================-->

<div class="logoD navbar container d-flex align-items-center text-white">
    <%= link_to  "dinnerdash", root_path(), class: "h1_logo" %>
    
    <div class="ml-auto d-flex justify-content-around">
        <% if user_signed_in? %>
            <% if current_user.admin %>
                <%= link_to  "backoffice", meals_path, class: "text-warning font-weight-bold" %>
            <% end %>
            <%= link_to  "perfil", edit_user_registration_path, class: "text-light" %>
            <%= link_to  "sair", destroy_user_session_path, method: :delete, class: "text-light" %>
        <% else %>
            <%= link_to  "entrar", new_user_session_path, class: "text-light" %>
            <%= link_to  "cadastrar", new_user_registration_path, class: "text-light" %>
        <% end %>
    </div>
</div>