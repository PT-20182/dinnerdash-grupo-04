<head>
    <%= stylesheet_link_tag "users_edit" %>
</head>
<body>
    <div class="cima_perfil_img"></div>
    <div class="cima_perfil d-flex flex-column">
        <div class="navbar container d-flex align-items-center">
            <a href="#"><h1 class="h1_logo">dinnerdash</h1></a>
            
            <div class="ml-auto d-flex justify-content-around">
                <a href="#">perfil</a>
                <a href="#">sair</a>
            </div>
        </div>
        
        <div class="container mt-auto mytitle">
            <h1>Seu Perfil</h1>
            <h4>Atualize os seus dados pessoais e senha.</h4>
        </div>
    </div>

    <%= form_for(resource, as: resource_name, 
                            url: registration_path(resource_name), 
                            html: { method: :put, class: "container d-flex flex-wrap flex-column form_perfil" }) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="d-flex flex-row justify-content-between">
            <div class="field form-group w-50 m-2">
                <%= f.label :nome %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
            </div>
            <div class="field form-group w-50 m-2">
                <%= f.label :email %><br />
                <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <!-- Nao tenho certeza de onde botar isso aqui -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Esperando confirmação por email para: <%= resource.unconfirmed_email %></div>
            <% end %>
            <!-- Ate aqui -->
        </div>
        <div class="d-flex flex-row justify-content-between">
            <div class="field form-group w-50 m-2">
                <%= f.label :nova_senha %> <i>(deixe em branco caso não queira alterar)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Nova Senha", class: "form-control" %>
                <% if @minimum_password_length %>
                <br />
                <em>No mínimo <%= @minimum_password_length %> caracteres.</em>
                <% end %>
            </div>
            <div class="field form-group w-50 m-2">
                <%= f.label :senha_atual %> <i>(por questão de segurança)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
        </div>
        <div class="actions d-flex flex-row justify-content-between">
            <%= f.submit "atualizar meu perfil", class: "btn btn-success m-2 submit_btn" %>
        </div>
    <% end %>
    
    <div class="footer">
        <footer class="bs-footer container d-flex justify-content-between align-items-center">
        
            <span class="cpy">dinnerdash | todos os direitos reservados</span>
            <span class="dev">desenvolvido por Gustavo Luigi</span>

        </footer>
    </div>
</body>


