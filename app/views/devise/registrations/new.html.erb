<head>
    <meta charset="utf-8" />
    <title>dinnerdash - cadastro</title>
</head>

<div class="screen">
    <%= render  "layouts/imgRegisSessions" %>

    <div class="boxRight">
        <div class="boxRightInner mx-auto">
            <%= link_to  "dinnerdash", root_path, class: "title mb-5" %>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'w-100'} ) do |f| %>
              <%= devise_error_messages! %>

              <div class="field form-group">                                
                  <%= f.label :name, class: 'formText' %><br />
                  <%= f.text_field :name, 
                                    placeholder: "Digite seu belo nome aqui ;)",
                                    autofocus: true, 
                                    autocomplete: "name", 
                                    id: "name", 
                                    class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :email, class: 'formText' %><br />
                <%= f.email_field :email, 
                                  placeholder: "example@website.com",
                                  autocomplete: "email",
                                  id: "signup_email", 
                                  class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password, class: 'formText' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, 
                                      placeholder: "Sua senha",
                                      autocomplete: "new-password",
                                      id: "signup_password", 
                                      class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password_confirmation, class: 'formText' %><br />
                <%= f.password_field :password_confirmation, 
                                      placeholder: "Confirme sua senha",
                                      autocomplete: "new-password",
                                      id: "signup_new_password", 
                                      class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Cadastrar", class: "btn btn-success w-100 mt-1 mb-4 p-2" %>
              </div>
            <% end %>

            <p class="hasAccount align-self-start w-100 pt-4">JÃ¡ possui conta?</p>
            <%= render "devise/shared/links" %> 
        </div>
    </div>
</div>