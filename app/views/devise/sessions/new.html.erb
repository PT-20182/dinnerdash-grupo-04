<head>
    <meta charset="utf-8" />
    <title>dinnerdash - login</title>
</head>

<div class="screen">
    <div class="boxLeft">
        <%= image_tag("sabri-tuzcu-365440.jpg",
            alt: "OMG! Não acredito que a imagem não carregou! :´(",
            class: 'imgFront') %>
    </div>

    <div class="boxRight">
        <div class="boxRightInner mx-auto">
            <h1 class="title mb-5">dinnerdash</h1>

            <%= form_for( resource, as: resource_name,
                          url: session_path(resource_name), html: {class: "w-100"} ) do |form| %>

                <div class="form-group">
                    <label for="signup_email" class="formText">E-mail</label>
                    <%= form.email_field  :email,
                                          autofocus: true,
                                          autocomplete: "email",
                                          placeholder: "example@website.com", 
                                          id: "signup_email", 
                                          class: "form-control" %>
                </div>

                <div class="form-group">
                    <label for="signup_password" class="formText">Senha</label>
                    <%= form.password_field :password,
                                            autocomplete: "current-password",
                                            placeholder: "Sua senha",
                                            id: "signup_password", 
                                            class: "form-control"%>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= form.check_box :remember_me %>
                    <%= form.label "Lembrar meu e-mail" %>
                  </div>
                <% end -%>

                <%= form.submit "fazer login", class: "btn btn-success w-100 mt-1 mb-4 p-2" %>
            <% end %>

            <p class="hasAccount align-self-start w-100 pt-4">Não possui conta?</p>
            <%= link_to "fazer meu cadastro", new_user_registration_path,
                        class: "btn btn-outline-success w-100 p-2" %>
            
        </div>
    </div>
</div>

